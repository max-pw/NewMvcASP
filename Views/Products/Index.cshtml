@model IEnumerable<MyStoreMVC.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<h2 class="center-align">Products</h2>

<div class="right-align" style="margin-bottom: 20px;">
    <a class="btn waves-effect waves-light" asp-action="Create">
        <i class="material-icons left">add</i> Create New
    </a>
</div>

<div class="card">
    <div class="card-content">
        <table class="highlight responsive-table">
            <thead>
                <tr>
                    <th style="width:30%;">Title</th>
                    <th style="width:20%;">Price</th>
                    <th style="width:20%;">Category</th>
                    <th style="width:30%;" class="center-align">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Category</td>
                        <td class="center-align">
                            <a class="btn-small waves-effect waves-light blue" asp-action="Edit" asp-route-id="@item.Id" title="Edit">
                                <i class="material-icons">edit</i>
                            </a>
                            <a class="btn-small waves-effect waves-light green" asp-action="Details" asp-route-id="@item.Id" title="Details">
                                <i class="material-icons">visibility</i>
                            </a>
                            <a class="btn-small waves-effect waves-light red" asp-action="Delete" asp-route-id="@item.Id" title="Delete">
                                <i class="material-icons">delete</i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
