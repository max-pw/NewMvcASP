@model MyStoreMVC.DTOs.RegisterDto
@{
    ViewData["Title"] = "Register";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title center-align">
                        <i class="material-icons medium">person_add</i>
                        <h4>Register</h4>
                    </span>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="card-panel red lighten-4 red-text text-darken-4">
                            <i class="material-icons left">error</i>
                            @Html.ValidationSummary(false, "", new { @class = "" })
                        </div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">account_circle</i>
                                <input asp-for="Username" type="text" id="username" class="validate" />
                                <label for="username">Username</label>
                                <span asp-validation-for="Username" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">email</i>
                                <input asp-for="Email" type="email" id="email" class="validate" />
                                <label for="email">Email</label>
                                <span asp-validation-for="Email" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock</i>
                                <input asp-for="Password" type="password" id="password" class="validate" />
                                <label for="password">Password (min 6 characters)</label>
                                <span asp-validation-for="Password" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock_outline</i>
                                <input asp-for="ConfirmPassword" type="password" id="confirmPassword" class="validate" />
                                <label for="confirmPassword">Confirm Password</label>
                                <span asp-validation-for="ConfirmPassword" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 center-align">
                                <button class="btn waves-effect waves-light btn-large" type="submit">
                                    <i class="material-icons left">person_add</i>
                                    Register
                                </button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 center-align">
                                <p>
                                    Already have an account?
                                    <a asp-action="Login">Login here</a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}