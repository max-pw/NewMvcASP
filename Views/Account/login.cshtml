@model MyStoreMVC.DTOs.LoginDto
@{
    ViewData["Title"] = "Login";
}

<div class="container" style="margin-top: 50px;">
    <div class="row">
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="card">
                <div class="card-content">
                    <span class="card-title center-align">
                        <i class="material-icons medium">account_circle</i>
                        <h4>Login</h4>
                    </span>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="card-panel red lighten-4 red-text text-darken-4">
                            <i class="material-icons left">error</i>
                            @Html.ValidationSummary(false, "", new { @class = "" })
                        </div>
                    }

                    <form asp-action="Login" method="post">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">email</i>
                                <input asp-for="Email" type="email" id="email" class="validate" />
                                <label for="email">Email</label>
                                <span asp-validation-for="Email" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">lock</i>
                                <input asp-for="Password" type="password" id="password" class="validate" />
                                <label for="password">Password</label>
                                <span asp-validation-for="Password" class="red-text"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 center-align">
                                <button class="btn waves-effect waves-light btn-large" type="submit">
                                    <i class="material-icons left">login</i>
                                    Login
                                </button>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col s12 center-align">
                                <p>
                                    Don't have an account?
                                    <a asp-action="Register">Register here</a>
                                </p>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}